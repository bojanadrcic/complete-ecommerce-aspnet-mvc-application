@model IEnumerable<Arrangement>

@{
    ViewData["Title"] = "List of Arrangements";
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col d-flex">
            <div class="card arr-card flex-fill">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@item.Name</h5>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="d-flex align-items-center">
                            <a class="text-white me-3" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="text-white" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    }
                </div>

                <img class="arr-card-img" src="@item.ImageURL" alt="@item.Name" />

                <div class="card-body arr-card-body">
                    <p class="mb-2 text-muted">@item.Description</p>

                    <div class="small">
                        <div><b>Destination:</b> @item.Destination.Name</div>
                        <div><b>Category:</b> @item.ArrangementCategory</div>
                        <div><b>Start Date:</b> @item.StartDate.ToString("dd MMM yy")</div>
                        <div><b>End Date:</b> @item.EndDate.ToString("dd MMM yy")</div>
                        <div class="mt-2">
                            <b>Status: </b>
                            @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                            {
                                <span class="badge bg-success">AVAILABLE</span>
                            }
                            else if (DateTime.Now > item.EndDate)
                            {

                                <span class="badge bg-danger">EXPIRED</span>
                            }
                            else
                            {

                                <span class="badge bg-primary">UPCOMING</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer arr-card-footer">
                    <div class="d-flex justify-content-between align-items-center flex-nowrap gap-2">
                        <a class="btn btn-outline-primary text-nowrap" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye-fill"></i> Show Details
                        </a>
                        <a class="btn btn-success text-white text-nowrap"
                           asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                            <small class="opacity-75"> (@item.Price.ToString("c"))</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@await Html.PartialAsync("_CreateItem", "Arrangements")




